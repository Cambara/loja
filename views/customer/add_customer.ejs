
<div class="row">
	<div class="col-md-3">
		<div >
			<div class="form-group">
				<label>Nome</label>
				<input class="form-control" name="name" ng-model="customer.name">
			</div>
			<div class="form-group">
				<label>Sobrenome</label>
				<input class="form-control" name="last_name" ng-model="customer.last_name">
			</div>
			<div class="form-group">
				<label>Data aniversario</label>
				<input type="date" class="form-control" name="birth_date" ng-model="customer.birth_date" placeholder="yyyy-MM-dd" min="1900-01-01" max="2040-12-31"> 
			</div>
			<button class="btn btn-primary" ng-click="customer.save()">Salvar</button>
		</div>
	</div>
</div>


